# Hayward Tech Suite Configuration Example
# Copy this file to .env and customize as needed

# Application Settings
APP_NAME=Hayward Tech Suite
APP_VERSION=2.0.0
DEBUG=False

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/hayward_techsuite.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Theme Settings
DEFAULT_THEME=dark
THEME_COLOR=#4158D0

# Backup Settings
BACKUP_DIR=backups
MAX_BACKUPS=10
BACKUP_COMPRESSION=True

# Monitoring Settings
MONITOR_INTERVAL=2
DISK_CHECK_INTERVAL=60

# Security Settings
REQUIRE_ADMIN_CONFIRMATION=True
ENABLE_AUDIT_LOG=True
AUDIT_LOG_FILE=logs/audit.log

# Notifications
ENABLE_NOTIFICATIONS=True
EMAIL_NOTIFICATIONS=False
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# Update Settings
CHECK_FOR_UPDATES=True
AUTO_UPDATE=False

# Feature Flags
ENABLE_BACKUP=True
ENABLE_SECURITY_SCANNER=True
ENABLE_SCHEDULING=True
ENABLE_REPORTS=True

# Language
LANGUAGE=en_US

# Advanced Settings
COMMAND_TIMEOUT=300
MAX_CONCURRENT_OPERATIONS=3
OPERATION_HISTORY_SIZE=100
